	"item": [
		{
			"name": "Create a new user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Assertion 1 - status code check\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"\r",
							"// Assertion 2 - Responce Value Check\r",
							"pm.test(\"Key value pair check\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.name).to.eql(\"Donald  Trump\");\r",
							"    pm.expect(jsonData.job).to.eql(\"Vice President\");\r",
							"    pm.expect(jsonData.email).to.eql(\"donaldt@gmail.com\");\r",
							"\r",
							"\r",
							"    pm.environment.set(\"UserID\",jsonData.id);\r",
							"\r",
							"});\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n     \"name\" : \"Donald  Trump\",\r\n    \"job\"   : \"Vice President\",\r\n    \"email\" : \"donaldt@gmail.com\",\r\n    \"avatar\" : \"https://donald.co.us\"\r\n\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
